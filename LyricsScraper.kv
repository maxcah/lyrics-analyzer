<InputBox>:
    orientation: 'vertical'
    padding: [20, 20, 20, 20]
    TextInput:
        id: input_text
        multiline: False
        font_size: 20
    Button:
        padding: [10, 10]
        text: 'Visualize'
        background_color: 1, 1, 1, 1
        font_size: 20
        on_press: root.write_lyrics_to_file(input_text.text)
        on_release: app.stop()
